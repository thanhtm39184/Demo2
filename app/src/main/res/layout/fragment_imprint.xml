<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".information.ImprintFragment"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp"
        >

    <TextView
            android:text="@string/imprint_label"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imprint_imprint_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/mid_border"
            android:layout_marginTop="@dimen/mid_border"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/imprint_category_font"
            />


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_company_label"
            android:textStyle="bold"
            android:textSize="@dimen/imprint_category_font"
            android:id="@+id/imprint_company_label"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/imprint_imprint_label"
            android:layout_marginTop="@dimen/high_border"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_company"
            android:id="@+id/imprint_company"
            app:layout_constraintStart_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginStart="@dimen/mid_border"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imprint_company_label"
            app:layout_constraintBottom_toBottomOf="@+id/imprint_company_label"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_office_label"
            android:textStyle="bold"
            android:textSize="@dimen/imprint_category_font"
            android:id="@+id/imprint_office_label"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imprint_company"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_office"
            android:id="@+id/imprint_office"
            app:layout_constraintStart_toStartOf="@+id/imprint_guideline_center"
            app:layout_constraintTop_toTopOf="@+id/imprint_office_label"
            app:layout_constraintBottom_toBottomOf="@+id/imprint_office_label"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_court_label"
            android:textStyle="bold"
            android:textSize="@dimen/imprint_category_font"
            android:id="@+id/imprint_court_label"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginTop="@dimen/high_border"
            app:layout_constraintTop_toBottomOf="@+id/imprint_office"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_court"
            app:layout_constraintTop_toTopOf="@+id/imprint_court_label"
            app:layout_constraintBottom_toBottomOf="@+id/imprint_court_label"
            app:layout_constraintStart_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginStart="@dimen/mid_border"
            android:id="@+id/imprint_court"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_director_label"
            android:textSize="@dimen/imprint_category_font"
            android:textStyle="bold"
            android:id="@+id/imprint_director_label"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toStartOf="@+id/imprint_guideline_center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="@dimen/high_border"
            app:layout_constraintTop_toBottomOf="@+id/imprint_court"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_director"
            android:id="@+id/imprint_director"
            app:layout_constraintTop_toTopOf="@+id/imprint_director_label"
            app:layout_constraintBottom_toBottomOf="@+id/imprint_director_label"
            app:layout_constraintStart_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.555"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_vat_label"
            android:textSize="@dimen/imprint_category_font"
            android:textStyle="bold"
            android:id="@+id/imprint_vat_label"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            app:layout_constraintEnd_toStartOf="@+id/imprint_guideline_center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="@dimen/high_border"
            app:layout_constraintTop_toBottomOf="@+id/imprint_director"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/imprint_vat"
            app:layout_constraintTop_toTopOf="@+id/imprint_vat_label"
            app:layout_constraintBottom_toBottomOf="@+id/imprint_vat_label"
            app:layout_constraintStart_toStartOf="@+id/imprint_guideline_center"
            android:layout_marginStart="@dimen/mid_border"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/mid_border"
            />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imprint_guideline_center"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.5"
            />

</androidx.constraintlayout.widget.ConstraintLayout>